LOCALPATH=$HOME/opt/local

export PATH=$LOCALPATH/bin:$PATH
export PYTHONPATH=$LOCALPATH/lib/python2.7/site-packages:$PYTHONPATH
export LIBRARY_PATH=$LOCALPATH/lib:$LIBRARY_PATH
#export LD_LIBRARY_PATH=$LOCALPATH/lib:$LD_LIBRARY_PATH
#export DYLD_LIBRARY_PATH=$LOCALPATH/lib:$DYLD_LIBRARY_PATH
export C_INCLUDE_PATH=$LOCALPATH/include:$C_INCLUDE_PATH
export CPLUS_INCLUDE_PATH=$LOCALPATH/include:$CPLUS_INCLUDE_PATH
export JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Home
